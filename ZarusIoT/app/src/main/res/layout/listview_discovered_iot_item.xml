<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/discoveredIotTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zarus_text_light"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/discoveredIotSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zarus_text_muted"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/discoveredIotAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="@string/add_device"
        android:textAlignment="viewEnd"
        android:textColor="@color/zarus_green"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>